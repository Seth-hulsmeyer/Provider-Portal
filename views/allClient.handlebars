<style media="screen">
  li {
    background-color: wheat;
    margin-bottom: 10px;
    padding: 10px;
    width: 50%;
    font-family: sans-serif;
  }
</style>

<h1>All Cients</h1>

<div class="row">
  {{#each Clients}}
    <div class="card col-sm-4 col-sm-offset-1" style="width: 25rem;">
        <div class="card-body">
            <h5 class="card-title"><a href="#" class="card-link">{{first_name}} {{last_name}}</a></h5>
            <h6 class="card-subtitle mb-2 text-muted">{{Provider.first_name}} {{Provider.last_name}}</h6>
            <p class="card-text">
                Insurance: {{insurance}} <br/>
                Email: {{email}}<br />
                Phone Number: {{phone}}<br />
            </p>
        </div>
    </div>
  {{/each}}
</div>